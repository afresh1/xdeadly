<tr> <td>
		<%== $indent %>
		<table width="100%" cellspacing="0" border="0">
			<tr>
				<td>
					<%= link_to_post $comment %>
                    (<%= $comment->mod->score %>/<%= $comment->mod->votes %>)
                    by <%= $comment->name %>
                    on <%= $comment->date %>
                    <%= is_new($comment) %>
				</td>
			</tr>
		</table>
		<%== $unindent %>
	</td>
</tr>
